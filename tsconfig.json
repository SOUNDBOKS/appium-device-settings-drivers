{
    "compilerOptions": {
        "declaration": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "build",
        "sourceMap": true,
        "target": "es5",
        "strict": true,
        "noEmit": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "isolatedModules": false,
        "types": ["mocha", "webdriverio"],
        "experimentalDecorators": true
    },
    "exclude": [
        "./node_modules/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}